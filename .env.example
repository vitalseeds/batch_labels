# Copy to .env and edit for your setup

# Printer
PRINTER_HOST=192.168.1.100
PRINTER_PORT=9100

# Label dimensions
LABEL_WIDTH=2.76    # inches (70 mm)
LABEL_HEIGHT=1.42   # inches (36 mm)
LABEL_DPI=203       # GK420D = 203

# Fonts: 0=scalable, A=9pt, B=11pt, D=18pt, E=28pt, F=26pt bold, G=60pt, H=21pt bold
SKU_LABEL_FONT=G
BATCH_LABEL_FONT=1

# Text size (mm)
SKU_CHAR_HEIGHT=18
SKU_CHAR_WIDTH=12
BATCH_CHAR_HEIGHT=7
BATCH_CHAR_WIDTH=4

# Padding (mm)
SKU_PADDING_LEFT=5
SKU_PADDING_TOP=5
BATCH_PADDING_BOTTOM=4
BATCH_PADDING_RIGHT=4
